<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/css/icons.css">
    <link rel="stylesheet" href="~/css/button.css">
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/signup.js"></script>

    @using ClothesStoreWebsite.Models;
    @model SignupViewModel

</head>

<body>
    <div class="signup-exit">
        <a class="signup-exit__icon _close" href="/Home/Index"></a>
    </div>
    <div class="container">
        <div class="signup _signup-container">
            <div class="signup__title">
                Sign Up
            </div>
            <div>
                <div class="signup__text">
                    Already a member? <a class="signup__link" href="/User/Login">Log In</a>
                </div>
            </div>
            <form class="signup-form" action="/User/Signup" method="post">
                <div class="signup-form__title">
                    Email
                </div>
                <div class="signup-form__input">
                    @Html.TextBoxFor(x => x.Email, new { @id = "email-input" })
                    @Html.ValidationMessageFor(x => x.Email)
                    <span class="signup-form__icons icons-good _hide" name="signup-form__icons"></span>
                    <span class="signup-form__icons icons-bad _hide" name="signup-form__icons"></span>
                </div>
                <div class="signup-form__title">
                    Password
                </div>
                <div class="signup-form__input">
                    @Html.TextBoxFor(x => x.Password, new { @type = "password" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="signup-form__title">
                    Confirm password
                </div>
                <div class="signup-form__input">
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @type = "password" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
                <a href="#" class="signup-form__link">Forgot password?</a>
                <input class="signup-form__button btn-reset button-base" type="submit" value="Sign Up"/>
            </form>
        </div>
    </div>
</body>
</html>